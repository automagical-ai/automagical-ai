{
    "include": ["src"],
    "compilerOptions": {
        "target": "es2020",
        "module": "es2022",
        "outDir": "dist",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "skipLibCheck": true
    }
}
