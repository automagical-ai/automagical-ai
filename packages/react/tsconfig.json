{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "outDir": "dist",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "skipLibCheck": true
    }
}
