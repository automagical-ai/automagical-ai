{
    "root": false,
    "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true,
        "includes": ["**", "!messages", "!!.next", "!!dist", "!!build"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noSvgWithoutTitle": "off"
            },
            "correctness": {
                "noUnusedFunctionParameters": "off",
                "noUnusedImports": {
                    "fix": "safe",
                    "level": "info",
                    "options": {}
                },
                "useParseIntRadix": "off",
                "useHookAtTopLevel": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useSelfClosingElements": {
                    "fix": "safe",
                    "level": "info",
                    "options": {}
                },
                "useTemplate": {
                    "fix": "safe",
                    "level": "info",
                    "options": {}
                }
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noDoubleEquals": {
                    "fix": "safe",
                    "level": "warn",
                    "options": {}
                },
                "noUnknownAtRules": "off"
            },
            "nursery": {
                "useSortedClasses": {
                    "fix": "safe",
                    "level": "info",
                    "options": {
                        "functions": ["cn"]
                    }
                }
            }
        },
        "domains": {
            "next": "recommended",
            "react": "recommended"
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "trailingCommas": "none"
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    }
}
