{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "namedInputs": {
        "default": ["{projectRoot}/**/*"],
        "biome": [
            "default",
            "{projectRoot}/biome.json",
            "{workspaceRoot}/biome.json",
            { "externalDependencies": ["@biomejs/biome"] }
        ]
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["{projectRoot}/dist"],
            "cache": true
        },
        "dev": {
            "dependsOn": ["^dev"],
            "continuous": true
        },
        "format": {
            "inputs": ["biome"],
            "dependsOn": ["^format"],
            "cache": true
        },
        "lint": {
            "inputs": ["biome"],
            "dependsOn": ["^lint"],
            "cache": true
        },
        "check": {
            "inputs": ["biome"],
            "dependsOn": ["^check"],
            "cache": true
        }
    },
    "nxCloudId": "6900b1fc6c76005b050c8566"
}
